<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TCSScoreCard">

    <TextView
        android:id="@+id/scoreCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="89dp"
        android:text="SCORE : "
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/scoreCard"
        android:layout_marginEnd="138dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="138dp" />

    <Button
        android:id="@+id/solution"
        android:layout_width="118dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:background="@android:color/holo_green_dark"
        android:text="SOLUTIONS"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/scoreCard"
        android:layout_marginTop="159dp"
        android:text="RIGHT :"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/no_of_right_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/right"
        android:layout_alignStart="@+id/scores"
        android:text="tttttttttt"
        android:textSize="30dp"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/no_of_wrong_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/wrong"
        android:layout_alignStart="@+id/scores"
        android:text="tttttttttt"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/scoreCard"
        android:layout_centerVertical="true"
        android:text="WRONG:"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/retest"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/solution"
        android:layout_marginBottom="152dp"
        android:text="RETEST"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeMaterialActivity">



    <TextView
        android:id="@+id/website1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Tips for better preparations !"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Before you start, have a look for the sections in aptitude test !"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/quantitative_ebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="Quantitative Aptitude"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/basic_grammar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:text="Verbal Aptitude- Basics of English Grammar"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/grammar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:text="Verbal Aptitude- English Grammar"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="173dp"
        android:text="E-BOOKS !"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignParentLeft="true" />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalResult">


    <TextView
        android:id="@+id/scoreCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/right"
        android:layout_marginTop="75dp"
        android:text="SCORE : "
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/scoreCard"
        android:layout_marginEnd="138dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="138dp" />


    <TextView
        android:id="@+id/right"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/wrong"
        android:layout_marginTop="140dp"
        android:text="RIGHT:"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/no_of_right_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/scores"
        android:layout_alignTop="@+id/right"
        android:text="hh"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/no_of_wrong_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/scores"
        android:layout_alignTop="@+id/wrong"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/wrong"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="195dp"
        android:text="WRONG:"
        android:textColor="@android:color/black"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/tips"
        android:layout_width="257dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="hello"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:text="Rate your Experience!"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/rBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:numStars="5"
        android:outlineAmbientShadowColor="@android:color/black" />

</RelativeLayout>